# Database Configuration
DATABASE_URL=postgresql://fakenews_user:your_password@localhost:5432/fakenews_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
DEBUG=False
SECRET_KEY=your-secret-key-change-this

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=./whatsapp/session
WHATSAPP_PHONE_NUMBER=+91XXXXXXXXXX
CHROME_DRIVER_PATH=/usr/bin/chromedriver

# NLP Configuration
NLP_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
SIMILARITY_THRESHOLD=0.75
MAX_TEXT_LENGTH=5000

# Gemini AI Configuration (Optional - for enhanced fact-checking)
GEMINI_API_KEY=AIzaSyB1SXE5W7jaFyUz568NSnDlpFd6wGOJUm0
GEMINI_ENABLED=True
GEMINI_CONFIDENCE_THRESHOLD=0.6

# Image Analysis Configuration
IMAGE_HASH_ALGORITHM=phash
IMAGE_SIMILARITY_THRESHOLD=5
MAX_IMAGE_SIZE_MB=10
TESSERACT_PATH=/usr/bin/tesseract
TESSERACT_LANGS=eng+tam

# URL Analysis Configuration
URL_TIMEOUT=10
MAX_SCRAPE_DEPTH=1
USER_AGENT=Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# Scraper Configuration
SCRAPE_INTERVAL=3600
MAX_ARTICLES_PER_SCRAPE=50
SCRAPER_DELAY=2

# Fact-Checker URLs
ALTNEWS_URL=https://www.altnews.in
BOOMLIVE_URL=https://www.boomlive.in
PIB_FACTCHECK_URL=https://factcheck.pib.gov.in

# Language Support
SUPPORTED_LANGUAGES=en,ta
DEFAULT_LANGUAGE=en

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/fakenews_bot.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Rate Limiting
RATE_LIMIT_PER_MINUTE=20
RATE_LIMIT_PER_HOUR=200

# Response Configuration
INCLUDE_SOURCE_LINKS=True
MAX_RESPONSE_LENGTH=1000
